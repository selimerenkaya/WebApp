@page "{groupId:int}"
@model ChatForLife.Pages.Chat.EditGroupModel
@{
    ViewData["Title"] = "Grubu Düzenle";
    Layout = "_Layout";
}

<div class="flex h-screen bg-gray-900 text-white">
    <!-- Sidebar: Grup Bilgileri -->
    <div class="w-80 bg-gray-800 p-4 flex flex-col border-r border-gray-700">
        <div class="mb-6">
            <h2 class="text-xl font-bold truncate">Grubu Düzenle</h2>
            <p class="text-sm text-gray-400">ID: @Model.GroupId</p>
        </div>

        <form method="post" class="space-y-4">
            <div>
                <label class="block text-sm text-gray-300 mb-1">Grup Adı</label>
                <input asp-for="GroupName" class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-2" />
            </div>

            <div>
                <label class="block text-sm text-gray-300 mb-1">Açıklama</label>
                <textarea asp-for="GroupDescription" rows="3" class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg p-2"></textarea>
            </div>

            <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg">
                Kaydet
            </button>
        </form>

        <div class="mt-10">
            <h3 class="font-semibold mb-2 text-sm text-gray-300">Üyeler</h3>
            <div class="space-y-2 max-h-64 overflow-y-auto pr-1">
                @foreach (var user in Model.Members)
                {
                    <div class="flex items-center justify-between bg-gray-700 p-2 rounded">
                        <div class="flex items-center">
                            <img src="@user.AvatarUrl" class="w-8 h-8 rounded-full mr-2" />
                            <span class="truncate">@user.Username</span>
                        </div>
                        <form method="post" asp-page-handler="RemoveMember">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="text-red-400 hover:text-red-600 text-sm">Çıkar</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sağ boşluk -->
    <div class="flex-1 bg-gray-900 flex items-center justify-center text-gray-400">
        <p class="text-lg">Grup bilgilerini soldan düzenleyebilirsiniz.</p>
    </div>
</div>
