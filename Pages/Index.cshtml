@page
@model ChatForLife.Pages.IndexModel
@{
    ViewData["Title"] = "Hoş Geldiniz";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-8 flex flex-col items-center justify-center min-h-screen">
    <!-- Başlık ve Açıklama -->
    <div class="text-center mb-16 w-full">
        <h1 class="text-5xl font-bold mb-4">ChatForLife'e Hoş Geldiniz</h1>
        <p class="text-xl opacity-90 max-w-2xl mx-auto">
            Dünyanın dört bir yanındaki insanlarla bağlantı kurun, sohbet edin ve yeni arkadaşlar edinin.
        </p>
    </div>

    <!-- Butonlar -->
    <div class="flex flex-col md:flex-row gap-6 mb-12 w-full justify-center">
        <a href="/Account/Login" class="btn-primary px-8 py-4 rounded-full text-lg font-semibold shadow-lg text-center">
            Giriş Yap
        </a>
        <a href="/Account/Register" class="btn-secondary px-8 py-4 rounded-full text-lg font-semibold shadow-lg text-center">
            Kayıt Ol
        </a>
    </div>

    <!-- Özellik Kartları -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full max-w-6xl">
        <div class="bg-white bg-opacity-10 p-6 rounded-xl backdrop-blur-sm border border-white border-opacity-20 hover:bg-opacity-20 transition-all">
            <div class="text-3xl mb-4">💬</div>
            <h3 class="text-xl font-semibold mb-2">Gruplar</h3>
            <p class="opacity-80">İlgi alanlarınıza göre gruplara katılın ve sohbet edin.</p>
        </div>
        <div class="bg-white bg-opacity-10 p-6 rounded-xl backdrop-blur-sm border border-white border-opacity-20 hover:bg-opacity-20 transition-all">
            <div class="text-3xl mb-4">👥</div>
            <h3 class="text-xl font-semibold mb-2">Arkadaşlar</h3>
            <p class="opacity-80">Arkadaşlarınızla birebir sohbetler başlatın.</p>
        </div>
        <div class="bg-white bg-opacity-10 p-6 rounded-xl backdrop-blur-sm border border-white border-opacity-20 hover:bg-opacity-20 transition-all">
            <div class="text-3xl mb-4">🔒</div>
            <h3 class="text-xl font-semibold mb-2">Güvenli</h3>
            <p class="opacity-80">Güvenli ve şifreli iletişim.</p>
        </div>
    </div>
</div>